<%- model_class = Contact -%>
<div class="page-header">
  <h1><%=t '.title', :default => Contact %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @contact.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @contact.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:website) %></dt>
      <dd><pre class="prettyprint"><%= @contact.website %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:twitter_handle) %></dt>
      <dd><pre class="prettyprint"><%= @contact.twitter_handle %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contacted) %></dt>
      <dd><pre class="prettyprint"><%= @contact.contacted %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:industry_influencer) %></dt>
      <dd><pre class="prettyprint"><%= @contact.industry_influencer %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:power_user) %></dt>
      <dd><pre class="prettyprint"><%= @contact.power_user %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comments) %></dt>
      <dd><pre class="prettyprint"><%= @contact.comments %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contacts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contact_path(@contact), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contact_path(@contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

