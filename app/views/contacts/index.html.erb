<%- model_class = Contact -%>
<div class="page-header">
  <h1>List of Social Contacts</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:twitter_handle) %></th>
      <th><%= model_class.human_attribute_name(:comments) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= link_to contact.name, contact_path(contact) %></td>
        <td><%= contact.email %></td>
        <td><%= link_to contact.website, contact.website %></td>
        <td><%= contact.twitter_handle %></td>
        <td><%= contact.comments.truncate(40) %></td>
        <td>
          <%= link_to "Edit", edit_contact_path(contact) %>
          <%= link_to "Delete", contact_path(contact), :method => :delete, :data => { :confirm => "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_contact_path,
            :class => 'btn btn-primary' %>
