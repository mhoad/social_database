<h1>Listing contacts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Email</th>
      <th>Website</th>
      <th>Twitter handle</th>
      <th>Contacted</th>
      <th>Industry influencer</th>
      <th>Power user</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.user %></td>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.website %></td>
        <td><%= contact.twitter_handle %></td>
        <td><%= contact.contacted %></td>
        <td><%= contact.industry_influencer %></td>
        <td><%= contact.power_user %></td>
        <td><%= contact.comments %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
